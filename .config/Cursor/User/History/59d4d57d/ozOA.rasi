/* Rofi theme for wallust colors */

* {
    bg: {{background}};
    bg-alt: {{color0}};
    fg: {{foreground}};
    fg-alt: {{color7}};
    
    border: 0;
    margin: 0;
    padding: 0;
    spacing: 0;
}

window {
    width: 400px;
    background-color: @bg;
    border-radius: 8px;
    border: 2px solid {{color4}};
}

element {
    padding: 8px 16px;
    background-color: transparent;
    text-color: @fg;
    cursor: pointer;
}

element.normal.normal {
    background-color: transparent;
    text-color: @fg;
}

element.normal.urgent {
    background-color: {{color9}};
    text-color: @bg;
}

element.normal.active {
    background-color: {{color4}};
    text-color: @bg;
}

element.selected.normal {
    background-color: {{color4}};
    text-color: @bg;
}

element.selected.urgent {
    background-color: {{color9}};
    text-color: @bg;
}

element.selected.active {
    background-color: {{color4}};
    text-color: @bg;
}

element.alternate.normal {
    background-color: transparent;
    text-color: @fg-alt;
}

element.alternate.urgent {
    background-color: {{color9}};
    text-color: @bg;
}

element.alternate.active {
    background-color: {{color4}};
    text-color: @bg;
}

scrollbar {
    width: 4px;
    border: 0;
    handle-color: {{color4}};
    handle-width: 8px;
    border-radius: 4px;
}

sidebar {
    border: 0;
    background-color: @bg-alt;
}

button {
    spacing: 0;
    text-color: @fg;
    background-color: transparent;
}

button:hover {
    background-color: {{color4}};
    text-color: @bg;
}

inputbar {
    spacing: 0;
    text-color: @fg;
    background-color: @bg-alt;
    border-radius: 4px;
    margin: 8px;
}

case-indicator {
    spacing: 0;
    text-color: @fg;
    background-color: transparent;
}

entry {
    spacing: 0;
    text-color: @fg;
    background-color: transparent;
}

prompt {
    spacing: 0;
    text-color: @fg;
    background-color: transparent;
}

inputbar {
    children: [prompt, entry];
}

listview {
    fixed-height: 0;
    border: 0;
    padding: 8px;
    margin: 0;
    columns: 1;
    lines: 8;
}

mainbox {
    border: 0;
    padding: 0;
    children: [inputbar, listview];
}

message {
    border: 0;
    background-color: transparent;
}

textbox {
    padding: 8px 16px;
    background-color: transparent;
    text-color: @fg;
}

error-message {
    border: 0;
    background-color: {{color9}};
    text-color: @bg;
}
